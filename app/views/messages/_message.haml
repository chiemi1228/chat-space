.message{data: {message_id: message.id}}
    .message__info
        .message__info__who
            = message.user.name
        .message__info__when
            = message.updated_at.strftime("%Y/%m/%d %H:%M")
    .lower-message
        - if message.content.present?
            %p.lower-message__content
                = message.content
        = image_tag message.image_url, class: 'lower-message__image' if message.image.present?
